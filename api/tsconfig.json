{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2023",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@adapter/*": [
        "../packages/libs/src/*"
      ]
    }
  },
  "include": [
    "packages/**/*",
    "integration/**/*",
    "src/",
    "typeorm.config.ts",
    "src/shared/keys/*.pem",
    "src/mail/templates/**/*.hbs",
    // "../packages/libs/src/**/*.ts",
    // "../packages/libs/src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}