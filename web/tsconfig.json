{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@adapter/*": [
        "../packages/libs/src/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "../packages/libs/src/**/*.tsx",
    "../packages/libs/src/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/middleware.ts_md",
    "../packages/adapter/src/share/utils/resouce.tsx___",
    "src/components/blog-route/blog_detail_route.tsx.nmd"
  ],
  "exclude": [
    "node_modules"
  ]
}