{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "target": "ESNext",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "outDir": "./dist",
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules"
   ]
}